#ifdef _WIN32
#include "windows.h"
#include "app_version.h"

LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
#pragma code_page(1252)

#define VER_FILEFLAGSMASK   (VS_FF_DEBUG | VS_FF_PRERELEASE)
#ifdef DEBUG
#define VER_FILEFLAGS       (VS_FF_DEBUG)
#else
#define VER_FILEFLAGS       (0)
#endif

#define COMPANY_NAME	      ""
#define FILE_DESCRIPTION    ""
#define FILE_VERSION        APP_VERSION_STRING
#define INTERNAL_NAME       APP_NAME
#define LEGAL_COPYRIGHT     APP_COPYRIGHT
#define LEGAL_TRADEMARK     APP_TRADEMARK
#define ORIGINAL_FILENAME   APP_NAME ".exe"
#define PRODUCT_NAME        APP_NAME
#define PRODUCT_VERSION     APP_VERSION_STRING

#define NUMERIC_VERSION APP_VERSION_MAJOR,APP_VERSION_MINOR,APP_VERSION_PATCH,APP_VERSION_TWEAK

IDI_ICON1 ICON APP_ICON_PATH

1 VERSIONINFO
  FILEVERSION     NUMERIC_VERSION
  PRODUCTVERSION  NUMERIC_VERSION
  FILEFLAGSMASK   VER_FILEFLAGSMASK
  FILEFLAGS       VER_FILEFLAGS
  FILEOS          VOS_NT_WINDOWS32
  FILETYPE        VFT_APP
  FILESUBTYPE     0
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
	  BEGIN
	    VALUE "CompanyName",      COMPANY_NAME
	    VALUE "FileDescription",  FILE_DESCRIPTION
	    VALUE "FileVersion",      FILE_VERSION
	    VALUE "InternalName",     INTERNAL_NAME
	    VALUE "LegalCopyright",   LEGAL_COPYRIGHT
      VALUE "LegalTrademark",   LEGAL_TRADEMARK
	    VALUE "OriginalFilename",	ORIGINAL_FILENAME
	    VALUE "ProductName",      PRODUCT_NAME
	    VALUE "ProductVersion",	  PRODUCT_VERSION
	  END
  END
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 1252
  END
END

#endif // _WIN32